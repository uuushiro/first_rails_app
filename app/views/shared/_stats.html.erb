<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>人にJUSTONEしました！
    </strong>
  </a></br>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>人にJUSTONEされました!
    </strong>
  </a></br>
  <% if @user.matchers.count > 0 %>
  <a href="<%= matching_user_path(@user) %>">
    <strong id="matchings" class="stat matchings">
      <%= @user.matchers.count %>人とマッチングしています！
    </strong>
  </a></br>
</div>
  <% end %>
