<li>
  <%= image_for(note.user) %>
  <span class="user-name">
    <%= link_to note.user.name, note.user %>
  </span>
  <span class="content">
    <%= link_to note.title, note_path(note.id) %>

    <div>
      <small>
    <%= link_to note.likes.count, liking_users_note_path(note.id), id: "like-count" %>人がいいね！といっています
      </small>
    </div>

  </span>
  <span>
    <%= note.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </span>
</li>
